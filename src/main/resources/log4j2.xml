<?xml version="1.0" encoding="UTF-8" ?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="log2console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy/MM/dd-hh:mm:ss}] {%level} -> %msg" />
        </Console>
        <File name="log2file" fileName=".log">
            <PatternLayout pattern="[%d{yyyy/MM/dd-hh:mm:ss}] {%level} -> %msg\n" />
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.ebblius" additivity="true">
            <AppenderRef ref="log2file" level="info" />
        </Logger>
        <Root level="trace" additivity="false">
            <AppenderRef ref="log2console" />
        </Root>
    </Loggers>
</Configuration>